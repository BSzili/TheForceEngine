#include "basic_enemy.dxs"

void setEnemySpecificFlags()
{
	TFE_SetCollision(self.objectId, /*radius*/1.4f, /*height*/7.5f, COLLIDE_PLAYER | COLLIDE_ENEMY);
	// Ground based enemy
	TFE_SetPhysics(self.objectId, PHYSICS_GRAVITY);
}

